<!--pages/candidate/qrcode/qrcode.wxml-->
<view class="qrcode-container">
  <view class="card user-info">
    <view class="name">{{userInfo.name}}</view>
    <view class="id-card">{{userInfo.idCard}}</view>
  </view>
  
  <view class="card qrcode-card">
    <view class="qrcode-title">考生身份二维码</view>
    <view class="qrcode-wrapper">
      <canvas canvas-id="qrcode" class="qrcode-canvas"></canvas>
    </view>
    <view class="qrcode-tips">
      <text>请向考务人员出示此二维码</text>
    </view>
  </view>
  
  <view class="card schedule-info" wx:if="{{nextSchedule}}">
    <view class="info-title">下一场考试</view>
    <view class="info-item">
      <text class="label">考试科目：</text>
      <text class="value">{{nextSchedule.activityName}}</text>
    </view>
    <view class="info-item">
      <text class="label">考试时间：</text>
      <text class="value">{{nextSchedule.time}}</text>
    </view>
    <view class="info-item">
      <text class="label">考试地点：</text>
      <text class="value">{{nextSchedule.venue}}</text>
    </view>
  </view>
  
  <view class="refresh-btn">
    <button class="button-primary" bindtap="refreshQRCode">
      <text class="iconfont icon-refresh"></text>
      刷新二维码
    </button>
  </view>
</view>