/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #f5f5f5;
  font-size: 28rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB',
    'Microsoft Yahei', sans-serif;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.button-primary {
  background-color: #409EFF;
  color: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border: none;
}

.button-primary:active {
  background-color: #3a8ee6;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ebeef5;
}

.list-item:last-child {
  border-bottom: none;
}

.text-primary {
  color: #409EFF;
}

.text-success {
  color: #67C23A;
}

.text-warning {
  color: #E6A23C;
}

.text-danger {
  color: #F56C6C;
}

.text-info {
  color: #909399;
}

.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.tag-primary {
  background-color: #ecf5ff;
  color: #409EFF;
}

.tag-success {
  background-color: #f0f9ff;
  color: #67C23A;
}

.tag-warning {
  background-color: #fdf6ec;
  color: #E6A23C;
}

.tag-danger {
  background-color: #fef0f0;
  color: #F56C6C;
}