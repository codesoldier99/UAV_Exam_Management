# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/uav_exam_db
# DATABASE_URL=mysql+mysqlconnector://user:password@localhost:3306/uav_exam_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# Application Configuration
APP_NAME=UAV Exam Management System
APP_VERSION=1.3.0
DEBUG=True
ALLOWED_HOSTS=*
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# WeChat Mini Program Configuration
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# QR Code Configuration
QR_CODE_EXPIRE_SECONDS=300  # 5 minutes

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_TIMES=100
RATE_LIMIT_SECONDS=60